<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Pixel_Art_Project.View.UserControls.MenuBarStrip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pixel_Art_Project.View.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <MenuBar Background="#21252b">
                <MenuBarItem Title="File" FontSize="16" Height="40">
                    <MenuFlyoutItem Text="Open" />
                    <MenuFlyoutItem Text="Save" />
                    <MenuFlyoutItem Text="Export" />
                </MenuBarItem>
                <MenuBarItem Title="Edit" FontSize="16" Height="40">
                    <MenuFlyoutItem Text="Undo" />
                    <MenuFlyoutItem Text="Redo" />
                </MenuBarItem>
                <MenuBarItem Title="Tools" FontSize="16" Height="40">
                    <MenuFlyoutItem Text="Change Grid Size" Click="ChangeGridSize_Click"/>
                </MenuBarItem>
            </MenuBar>
        </Grid>
</UserControl>
